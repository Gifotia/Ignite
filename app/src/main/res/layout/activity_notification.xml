<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Customer_Activity"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:background="@color/blue_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Details"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="@color/DarkBlueGray"
        android:padding="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/nt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:text="@string/email"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:text="Phone Number"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nt_edt_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:background="@drawable/form_et_bg"
        android:hint="Bill Amount"
        android:inputType="number"
        android:padding="13dp"
        android:textColor="@color/white"
        android:textColorHint="@color/BlueGray" />

    <EditText
        android:id="@+id/nt_edt_remark"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:background="@drawable/form_et_bg"
        android:gravity="start"
        android:hint="Remark"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:textColor="@color/white"
        android:textColorHint="@color/BlueGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_notify"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="100sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/btn_background"
            android:text="send notification"
            android:textColor="@color/white">

        </Button>
    </RelativeLayout>


</LinearLayout>